<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HODLINFO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        body {
            font-family: 'Oswald', sans-serif;
            background-color: #191d28;
            color: #fff;
        }

        .navbar {
            background-color: #191d28 !important;
        }

        .btn-outline-info {
            color: #3dc6c1;
            border-color: #3dc6c1;
        }

        .btn-outline-info:hover {
            background-color: #3dc6c1;
            color: #191d28;
        }

        .timer {
            font-size: 18px;
            color: #3dc6c1;
            margin-left: 15px;
        }

        .navbar .timer {
            display: flex;
            align-items: center;
        }

        .best-price {
            font-size: 80px;
            font-weight: 500;
            color: #3dc6c1;
        }

        .small-text {
            font-size: 14px;
            color: #6c757d;
        }

        .percentage {
            font-size: 28px;
            font-weight: 500;
        }

        .table {
            color: #fff;
        }

        .table th {
            color: #6c757d;
            font-weight: 400;
        }

        .table td {
            font-size: 20px;
        }

        .teleport-switch {
            display: flex;
            align-items: center;
            margin-right: 15px;
        }

        .teleport-switch-control-input {
            display: none;
        }

        .material-symbols-outlined {
            font-size: 24px;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .teleport-switch-control-input:checked+.material-symbols-outlined {
            color: #3dc6c1;
        }

        .icon-text {
            display: flex;
            align-items: center;
        }

        .icon-text span {
            margin-left: 5px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" style="font-size: 40px; font-weight: 500; color: #3dc6c1;">HODLINFO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <button class="btn btn-outline-info me-2">INR</button>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-info me-2">BTC</button>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-info me-2">BUY BTC</button>
                    </li>
                </ul>
                <ul class="navbar-nav d-flex align-items-center">
                    <li class="nav-item">
                        <a class="nav-link">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <label class="custom-control teleport-switch">
                            <input type="checkbox" class="teleport-switch-control-input" id="darkModeToggle">
                            <span class="material-symbols-outlined" id="lightModeIcon">light_mode</span>
                            <span class="material-symbols-outlined" id="darkModeIcon">dark_mode</span>
                        </label>
                    </li>
                    <li class="nav-item">
                        <div class="timer">60</div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row text-center">
            <h3>Best Price to Trade</h3>
            <div class="display-4">₹ <%= (data[0].high + data[0].low) / 2 %></div>
            <p>Average <%= data[0].name %> net price including commission</p>
        </div>

        <!-- Small Header Section (timeframe percentages) -->
        <div class="d-flex justify-content-around align-items-center mt-5">
            <div class="text-center">
                <p>5 Mins</p>
                <p class="small-header-percentage">0.38%</p>
            </div>
            <div class="text-center">
                <p>1 Hour</p>
                <p class="small-header-percentage">1.09%</p>
            </div>
            <div class="text-center">
                <p>1 Day</p>
                <p class="small-header-percentage">5.51%</p>
            </div>
            <div class="text-center">
                <p>7 Days</p>
                <p class="small-header-percentage">12.73%</p>
            </div>
        </div>

        <!-- Table of Crypto Data -->
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Base Unit</th>
                    <th scope="col" class="text-center">Name</th>
                    <th scope="col" class="text-center">Last Traded Price</th>
                    <th scope="col" class="text-center">Buy/Sell Price</th>
                    <th scope="col" class="text-center">Volume</th>
                    <th scope="col" class="text-center">Open</th>
                    <th scope="col" class="text-center">High/Low</th>
                    <th scope="col" class="text-center">Trade Time</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(doc) { %>
                <tr>
                    <td class="text-center"><%= doc.baseUnit %></td>
                    <td class="text-center"><%= doc.name %></td>
                    <td class="text-center">₹ <%= doc.last %></td>
                    <td class="text-center">
                        <sup class="text-success">₹ <%= doc.buy %></sup><br>
                        <sub class="text-danger">₹ <%= doc.sell %></sub>
                    </td>
                    <td class="text-center"><%= doc.volume %></td>
                    <td class="text-center"><%= doc.open %></td>
                    <td class="text-center">
                        <sup class="text-success">₹ <%= doc.high %></sup><br>
                        <sub class="text-danger">₹ <%= doc.low %></sub>
                    </td>
                    <td class="text-center"><%= doc.tradeTime %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>

    <script>
        // Timer functionality
        let timer = 60;
        setInterval(() => {
            timer = timer > 0 ? timer - 1 : 60;
            document.querySelector('.timer').textContent = timer;
        }, 1000);

        // Dark/Light mode toggle
        const darkModeToggle = document.getElementById('darkModeToggle');
        const body = document.body;
        const lightModeIcon = document.getElementById('lightModeIcon');
        const darkModeIcon = document.getElementById('darkModeIcon');

        darkModeToggle.addEventListener('change', () => {
            if (darkModeToggle.checked) {
                body.style.backgroundColor = '#ffffff';
                body.style.color = '#191d28';
                lightModeIcon.style.color = '#3dc6c1';
                darkModeIcon.style.color = '#191d28';
            } else {
                body.style.backgroundColor = '#191d28';
                body.style.color = '#ffffff';
                lightModeIcon.style.color = '#ffffff';
                darkModeIcon.style.color = '#3dc6c1';
            }
        });
    </script>
</body>

</html>
